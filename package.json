{
    "name": "suit-hoarder",
    "version": "1.0.0",
    "type": "module",
    "description": "Card game rules website",
    "main": "index.js",
    "scripts": {
        "lint": "eslint www/**/*.js",
        "prettier": "prettier --write \"www/**/*.{js,css,html}\"",
        "autofix": "npm run autofix:js && npm run prettier",
        "autofix:js": "eslint www --fix",
        "prepare": "husky install",
        "dev": "live-server --port=3000 --open=index.html www"
    },
    "lint-staged": {
        "www/*.js": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "eslint": "^8.0.0",
        "eslint-config-prettier": "^10.1.5",
        "globals": "^16.2.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.0",
        "live-server": "^1.2.2",
        "prettier": "^3.0.0"
    }
}
